<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="variable.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Panel de Control" FontSize="26" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>

            <Border StrokeShape="RoundRectangle 17" BackgroundColor="White" Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="lblcontador" Text="0" FontSize="48" FontAttributes="Bold" HorizontalOptions="Center" TextColor="BlueViolet"/>
                    <Button Text="Incrementar" Clicked="OnIncrementarClicked" BackgroundColor="BlueViolet" CornerRadius="25"/>
                </VerticalStackLayout>
            </Border>

            <Border StrokeShape="RoundRectangle 15" BackgroundColor="White" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Button Text="Ver Datos del Sistema" Clicked="OnMostrarVariableClicked" BackgroundColor="Green" CornerRadius="10"/>
                    <Label x:Name="lblresultado" Text="Esperando Acción..." FontSize="14" TextColor="Black" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>